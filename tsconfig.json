{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "paths": {
            "Theme/*": ["./themes/default/*"]
        }
    },
    "include": ["src/**/*", "themes/**/*", "types.d.ts"],
    "exclude": ["node_modules"]
}